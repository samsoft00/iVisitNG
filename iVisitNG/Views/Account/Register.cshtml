@model RegisterViewModel
@{
    Layout = "~/Views/Shared/_Non-dashboard-layout.cshtml";
    ViewData["Title"] = "Register";
}

<div class="rows">
    <div class="col-md-4s">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            
            <div class="text-center">
                <h2 class="logo"><img src="@Url.Content("~/Content/vendor/img/dpr.png")" width="150px" alt="" /></h2>
                <h4>Create a new account.</h4>
                <hr/>
                @Html.ValidationSummary(true, "", new { @class = "text-danger alert alert-danger" })
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter valid email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" placeholder="Enter valid password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Enter password confirmation"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-warning btn-block">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
