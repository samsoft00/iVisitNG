@model iVisitNG.Models.Notifications

@{
    ViewData["Title"] = "Notifications";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel">

            <header class="panel-heading panel-border">
                @ViewData["Title"]
            </header>

            <div class="panel-body">

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Message" class="control-label"></label>
                        <textarea asp-for="Message" class="form-control" id="messageNote"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Enabled" /> @Html.DisplayNameFor(model => model.Enabled)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Send Notification" class="btn btn-default" />
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {

    <script>
        $(document).ready(function () {
            $('#messageNote').summernote({
                height: 120,
                placeholder: 'Notification message...',
            });

        });
    </script>
}
